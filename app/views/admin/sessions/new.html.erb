<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="col-md-3">管理者ログイン</h5>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="row form-group justify-content-center">
          <%= f.label :email, "メールアドレス", class: " col-md-2 col-form-label" %>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>
        <div class="row form-group justify-content-center">
          <%= f.label :password, "パスワード", class: "col-md-2 col-form-label" %>
          <div class="col-md-6 mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-4 mb-5">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>