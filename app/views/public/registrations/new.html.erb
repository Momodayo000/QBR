<div class="container">
  <div class="row">
    <div class="col">
      <h5 class=" col-md-2 mx-5 mb-5">新規会員登録</h5>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <table class="table-sm table-borderless">
            <tr>
              <td>名前</td>
              <td><%= f.label :last_name, "(姓)", class: "col-form-label" %></td>
              <td><%= f.text_field :last_name, placeholder: "令和", class: "form-control" %></td>
              <td><%= f.label :last_name, "(名)", class: "col-form-label ml-4" %></td>
              <td><%= f.text_field :first_name, placeholder: "道子", class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.label :last_name_furigana, "(セイ)", class: "col-form-label" %></td>
              <td><%= f.text_field :last_name_furigana, placeholder: "レイワ", class: "form-control" %></td>
              <td><%= f.label :last_name_furigana, "(メイ)", class: "col-form-label ml-4" %></td>
              <td><%= f.text_field :first_name_furigana, placeholder: "ミチコ", class: "form-control" %></td>
            </tr>
            <tr>
              <td>性別</td>
              <td><%= f.radio_button :gender, "male" %> 男性</td>
              <td><%= f.radio_button :gender, "female" %> 女性</td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス", class: "col-form-label" %></td>
              <td></td>
              <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-form-label" %></td>
              <td></td>
              <td><%= f.telephone_field :telephone_number, placeholder: "00000000000", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(6文字以上)", class: "col-form-label" %></td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード(確認用)", class: "col-form-label" %></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td colspan="2"></td>
              <td><%= f.submit "新規登録", class: "btn my-2 btn-success btn-block", style: "font-weight: bold;" %></td>
            </tr>
          </table>
        </div>
      <% end %>

      <h5 class="col-md-3 mx-3">既に登録済みの方</h5>
      <div class="mx-5">
        <%= render "public/shared/links" %>
      </div>

    </div>
  </div>
</div>
