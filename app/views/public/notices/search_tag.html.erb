<div class="container">
  <div class="row">
    <div class="col">
      <h2>タグが<strong><%=@tag.name%></strong>の投稿一覧</h2>
      <% @tag_list.each do |list|%>
        <i class="fa-sharp fa-solid fa-tag"></i>
        <%=link_to list.name, search_tag_notices_path(tag_id: list.id) %>
        <%="(#{list.notices.count})" %>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th></th>
          <th>期限</th>
        </tr>
      </thead>
      <tbody>
        <% @notices.each do |notice| %>
          <tr>
            <td><%= link_to notice.title, notice_path(notice.id) %></td>
            <td><%= notice.avg_score %>点（<%= notice.reviews.count %>件のレビュー）</td>
            <td><%= notice.deadline %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
